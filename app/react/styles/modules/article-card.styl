.article-card
  height 400px
  width 300px
  display inline-block
  vertical-align top
  margin-right 1em
  transition 300ms linear

.article-card--add .article-card__container
  background $gray

.article-card__container
  border-radius 10px
  top 0
  left 0
  background white
  height 100%
  width 100%
  overflow-y auto
  overflow-x hidden

.article-card__edit-button
  font-size 12px
  padding .25rem 1rem

.article-card__summary
  flex 1 0 auto
  justify-content center
  text-align center
  white-space normal

.article-card__excerpt
  line-height 1.2

.article-card__image
  position relative
  background-color $gray
  border-top-left-radius 9px
  border-top-right-radius 9px
  background-position top center
  background-size cover
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition 300ms linear
  
  &.hidden
    opacity 0
  
  &.editing:after
    content ''
    display block
    position absolute
    z-index 1
    top 0
    left 0
    width 100%
    height 100%
    background rgba(black, .5)

.article-card__image__edit-button
  position relative
  background transparent
  color white
  z-index 2

.article-card__cancel-button
  cursor pointer
  position absolute
  z-index 2
  top 0px
  right 5px
  background none
  border none
  font-size 1.5rem
  color white
  &:focus
    outline 0

.article-card__caption
  width 300px
  display inline-block
  vertical-align top
  margin-right 1em
  white-space normal