.playlist-feature
  position relative
  width 100%
  +above(500px)
    flex-basis 50%
  +above(800px)
    flex-basis 33.33%
  
  &:after
    content ''
    display block
    padding-bottom 100%
  
  .action
    position absolute
    z-index 4
    bottom 4px
    right 4px
    padding 0 4px
    border 1px solid black
    font-size 12px
    background white
    &.featured
      color white
      background black

.playlist-feature__content
  width 100%
  height 100%
  top 0
  left 0
  overflow hidden
  
  &:hover, 
  &:hover *
    text-decoration none
  
  .avatar
    width 30px
    height 30px
    display inline-block
    border-radius 50%
    margin-right .5rem

.playlist-feature__card
  width 35%
  border-radius 5px
  height 55%
  position absolute
  bottom -10%
  left 50%
  background white
  overflow hidden
  transform translate(-50%, 0) translateZ(0)
  z-index 2
  box-shadow 0 5px 5px rgba($black, .4)
  backface-visibility hidden
  

  &.card-1
    transform translate(-120%, 5%) rotate(-10deg) translateZ(0)
    z-index 1
    
  &.card-2
    transform translate(20%, 4.5%) rotate(10deg) translateZ(0)
    z-index 3
  
  h4
    padding 3px
    font-size 14px
    opacity .5
    font-family $serif
    

.playlist-feature__card__image
  height 70px
  width 100%
  background-size cover
  background-position top center

.playlist-feature__title
  +above(md)
    font-size 25px
    line-height 34px

.playlist-feature__name
  text-tranform uppercase
  letter-spacing 1px