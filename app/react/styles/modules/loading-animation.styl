.loader:before,
.loader:after,
.loader {
  border-radius: 50%;
  width: 2.5em;
  height: 2.5em;
  animation-fill-mode: both;
  animation: load 1.8s infinite ease-in-out;
}

.loader {
  position absolute
  font-size: 10px;
  margin: 10px auto;
  position: relative;
  transform: translateZ(0);
  animation-delay: -0.16s;
  top: -3em;
}

.loader:before {
  left: -3.5em;
  animation-delay: -0.32s;
}

.loader:after {
  left: 3.5em;
}

.loader:before,
.loader:after {
  content: '';
  position: absolute;
  top: 0;
}

@keyframes load {
  0%,
  80%,
  100% {
    box-shadow: 0 2.5em 0 -1.3em $teal;
  }
  40% {
    box-shadow: 0 2.5em 0 0 $teal;
  }
}