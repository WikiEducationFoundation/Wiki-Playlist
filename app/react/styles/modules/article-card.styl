.article-card
  width 100%
  max-width 300px
  margin-bottom 1em
  transition 300ms linear
  +above(md)
    display block
    vertical-align top
    width 100%
    max-width none
    height 300px
    margin-left auto
    margin-right auto

.article-card--empty
  height 300px
  align-items center
  justify-content center
  display flex
  flex-direction column
  background rgba($mine-shaft, .05)

.card,
.article-card__container
  border-radius 10px
  top 0
  left 0
  background white
  height 100%
  width 100%
  overflow-y auto
  overflow-x hidden
  box-shadow 0px 2px 4px 0px rgba(0,0,0,0.22)

.article-card__container
  flex-direction column
  +above(md)
    flex-direction row

.article-card__content
  display flex
  align-items stretch
  flex-direction column
  height 100%
  width 100%
  
  +above(md)
    flex-direction row

.article-card--title 
  white-space normal
  .article-card__summary
    text-align left
    justify-content flex-start
    white-space normal

.article-card--add .article-card__container
  background $gray

.article-card__edit-button
  font-size 12px
  padding .25rem 1rem

.article-card__summary
  display flex
  white-space normal
  flex-direction column
  justify-content center
  padding 1rem
  align-items space-between
  +above(md)
    display flex
    height 100%
    justify-content space-between
    padding 2rem
    max-width 70%

.article-card__title
  padding-bottom .25rem
  margin-bottom .5rem

