.playlist
  position relative
  z-index 50
  padding 0 1rem
  +above(md)
    padding 0

.playlist__container
  padding-top 1rem

.playlist__title,
.playlist__title textarea.invisible-input
  min-height 170px

.playlist__caption
  min-height 120px
  
  +above(md)
    width 300px
  
  textarea.invisible-input
    width 100%
    height 130px
  
  .character-limit
    // right -30px

.playlist-actions
  max-width 300px
  margin auto

.playlist__background-color
  position absolute
  z-index -1
  top 0
  left 0
  right 0
  width 100%
  height 300px
  +above(md)
    height 400px

.playlist__background-color-picker
  background $gallery
  display flex
  padding 5px
  position absolute
  z-index 4
  top 0
  right 0
  border-radius 2px
  
  +above(1rem)
    top 1rem
    right 1rem

.color-swatch
  margin-right .5rem
  cursor pointer
  transition 200ms linear
  &:hover
    opacity .8
  &:last-child
    margin-right 0