.playlist
  position relative
  z-index 50
  padding 0 1rem
  +above(lg)
    padding 0

.playlist__container
  padding-top 1rem

.playlist__title
  max-width 500px

.playlist__title
  word-wrap: break-word
  .editable-text
    textarea.invisible-input
      margin-bottom 30px
      +above(md)
        margin-bottom 0px

.playlist__caption
  word-wrap: break-word
  margin-top 0
  padding-top 10px
  padding-bottom 20px
  +above(lg)
    padding-bottom 0
    padding-top 0
    width 300px
    align-self: center;

  p
    padding 4px
    border-bottom 2px solid transparent
    line-height 1.75

.playlist-actions
  max-width 300px
  margin auto

.playlist__background-color
  position absolute
  z-index -1
  top 0
  left 0
  right 0
  width 100%
  height 40%
  +above(md)
    height 375px

.playlist__background-color-picker
  // background white
  display flex
  padding 7px
  position absolute
  z-index 4
  top 0
  left 0
  border-radius 2px

  +above(1rem)
    top 1rem
    left 0rem

.color-swatch
  margin-right .5rem
  cursor pointer
  transition 200ms linear
  border 2px solid rgba(0,0,0,.3)
  &:hover
    opacity .8
  &:last-child
    margin-right 0
.color-swatch svg
  margin-top -5px
