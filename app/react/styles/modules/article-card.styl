.article-card__image
  position relative
  background-color $gray
  background-position top center
  background-repeat no-repeat
  background-size cover
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition 300ms linear
  height 200px
  
  +above(md)
    height 100%
    width 400px
    max-width 30%
    flex-basis 35%
    background-position center
    background-color white
  
  &.hidden
    opacity 0
  
  &.editing:after
    content ''
    display block
    position absolute
    z-index 1
    top 0
    left 0
    width 100%
    height 100%
    background rgba(black, .5)

.article-card__header
  // 

.article-card__image__edit-button
  position relative
  background transparent
  color white
  z-index 2

.article-card__cancel-button
  cursor pointer
  position absolute
  z-index 2
  top 0px
  right 5px
  background none
  border none
  font-size 1.5rem
  color white
  &:focus
    outline 0

.article-card__caption
  width 300px
  display inline-block
  vertical-align top
  margin-right 1em
  white-space normal