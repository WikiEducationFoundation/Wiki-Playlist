.article-card
  height 400px
  width 300px
  display inline-block
  vertical-align top
  margin-right 1em
  transition 300ms linear

.article-card__container
  border-radius 10px
  top 0
  left 0
  background white
  height 100%
  width 100%
  overflow-y auto
  overflow-x hidden
  

.article-card__summary
  flex 1 0 auto
  justify-content center
  text-align center
  white-space normal

.article-card__image
  border-top-left-radius 10px
  border-top-right-radius 10px
  background-position top center
  background-size cover