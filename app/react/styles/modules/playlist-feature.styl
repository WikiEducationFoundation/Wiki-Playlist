.playlist-feature--container
  position relative
  flex-basis 100%
  padding .5rem
  +above(600px)
    margin-bottom 0
    flex-basis 50%

  +above(800px)
    flex-basis 33.33%

.playlist-feature
  position relative
  background $teal
  // background-image url(/images/pattern-transparent-low-opacity.png)
  // background-size 300px auto
  width 100%
  transition 300ms easeOutExpo box-shadow
  box-shadow 0 2px 2px rgba(0,0,0,.15)
  border-radius 5px
  // border .2px solid rgba(0,0,0,0.1)
  // margin-bottom 1rem

  &:hover
    z-index 10
    box-shadow 0 2px 4px rgba(0,0,0,.55)

  &:after
    content ''
    display block
    padding-bottom 100%

  .action
    position absolute
    z-index 4
    bottom 4px
    right 4px
    padding 0 4px
    border 1px solid black
    font-size 12px
    background white
    &.featured
      color white
      background black

.background-blend-mode .playlist-feature
  // background-image url(/images/pattern-transparent.png)
  // background-blend-mode: multiply;

.playlist-feature__content
  width 100%
  height 100%
  top 0
  left 0
  overflow hidden
  color rgba(0,0,0,.75)

  &:hover,
  &:hover *
    text-decoration none

  .avatar
    width 22px
    height 22px
    display inline-block
    border-radius 50%
    margin-right .5rem

.playlist-feature__cards
  overflow hidden

.playlist-feature__card
  width 35%
  border-radius 5px
  height 55%
  position absolute
  bottom -20%
  left 50%
  background white
  overflow hidden
  transform translate(-50%, 0) translateZ(0)
  z-index 2
  box-shadow 0 5px 5px rgba($black, .4)
  backface-visibility hidden

  &.card-1
    transform translate(-120%, 4.5%) rotate(-10deg) translateZ(0)
    z-index 1

  &.card-2
    transform translate(20%, 3.5%) rotate(10deg) translateZ(0)
    z-index 3

  h4
    padding 7px 3px
    font-size 13px
    opacity .5
    font-family $serif
    color rgba($black, .7)
    text-align center


.playlist-feature__card__image
  height 70px
  width 100%
  background-size cover
  background-position top center

.playlist-feature .playlist__user-info
  font-size 14px
  font-weight 600

.playlist-feature__title
  font-size 28px
  word-wrap break-word
  line-height 1.3
  +above(md)
    font-size 24px

.playlist-feature__name
  text-tranform uppercase
  font-weight 600
  font-size 14px
  opacity .9
