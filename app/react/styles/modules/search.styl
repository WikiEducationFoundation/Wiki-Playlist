.search__container
  position fixed
  z-index 50
  top 0
  left 0
  width 100%
  height 100%
  background white
  padding-top 60px
  +above(md)
    padding-top 0
    background rgba($black, .7)


.search__container__card
  +above(md)
    background $gallery
    border-radius 10px
    box-shadow 0px 2px 4px 0px rgba(0,0,0,0.22)
    padding 1rem
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    width 45%
    height 80%
    margin auto
    overflow-y auto
    -webkit-overflow-scrolling touch

.search__container-header
  background $teal
  border-radius 10px 10px 0 0
  padding 1rem 1rem 2rem 1rem
  margin -1rem -1rem 1rem -1rem

.search__container-header .close-button
  color white

.search__container__empty-state
  position absolute
  top 50%
  left 0
  width 100%
  text-align center
  color $silver

.search__input
  display block
  border-radius 0
  width 100%
  border none
  border 1px solid darken($teal, 10)
  font-size 18px

.search-icon
  position absolute
  top 6px
  right .5rem

.search-results
  // max-width 500px

.search-result
  border-radius 10px

  h3
    font-size 20px

  img
    max-width 100%
    height auto

  p
    margin-bottom 10px
    font-size 15px
    line-height 18px

.search-results__summary
  flex-basis 75%
  white-space normal

.search-result__description
  overflow: hidden
  display: block
  text-overflow: ellipsis

.search-result__actions
  a
    color $teal
  // align-items stretch

.search-result__actions .btn
  display block
  // flex 1
  text-align center
  transition 300ms linear
