.onboarding__screen
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background rgba($black, .7)
  z-index 51

.onboarding__title
  position relative
  z-index 52
  height 300px

.onboarding__column
  height 100%
  justify-content space-between
  flex 1

.onboarding__image
  background-size 50% auto
  background-position center
  background-repeat no-repeat
  flex-basis 50%

.onboarding__finish
  margin-left auto