.search__container
  position fixed
  z-index 50
  top 0
  left 0
  width 100%
  height 100%
  background white
  +above(md)
    background rgba($black, .7)

.search__container__card
  +above(md)
    background $gallery
    border-radius 10px
    box-shadow 0px 2px 4px 0px rgba(0,0,0,0.22)
    padding 1rem
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    width 55%
    height 80%
    margin auto
    overflow-y auto
    -webkit-overflow-scrolling touch

.search__input
  display block
  border-radius 0
  width 100%
  border none
  border 1px solid $gray
  font-size 22px
  line-height 22px

.search-icon
  position absolute
  top 6px
  right .5rem

.search-results
  // max-width 500px

.search-result
  border-radius 10px
  
  img
    max-width 100%
    height auto
  
  p
    margin-bottom 0
    font-size 12px

.search-result__description
  overflow: hidden
  display: block
  width: 270px
  white-space: nowrap
  text-overflow: ellipsis

.search-result__actions
  // align-items stretch

.search-result__actions .btn
  display block
  // flex 1
  text-align center
  transition 300ms linear