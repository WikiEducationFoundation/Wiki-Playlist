.sharing__overlay 
  background rgba($black, .5)
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  width 100%
  height 100%
  z-index 101
  display flex
  justify-content center
  align-items center
  
  img
    vertical-align top

.sharing__container.card
  max-width 340px
  height auto
  
  .close-button
    opacity .5
    font-size 25px

// Share Image

.share-image
  background-color $teal
  height 492px
  overflow hidden
  width 924px
  background-image url(https://w-playlist.s3.amazonaws.com/images/playlist-background-pattern/pattern-transparent-opacity-25.png)
  background-size 300px auto

.share-image__articles
  height 300px

.share-image__title
  color white
  text-transform uppercase
  
  h1
    color white
    letter-spacing .2rem
    font-size 77px
    font-weight bold
    font-family $sans-serif

.share-image__user
  padding-top 70px
  font-weight 600
  letter-spacing 1.5px
  margin-bottom 40px
  font-size 40px
  text-transform capitalize
    