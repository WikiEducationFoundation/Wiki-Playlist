.playlist-feature
  position relative
  width 100%
  +above(500px)
    flex-basis 50%
  +above(800px)
    flex-basis 33.33%
  
  &:after
    content ''
    display block
    padding-bottom 100%

.playlist-feature__content
  width 100%
  height 100%
  top 0
  left 0
  overflow hidden

.playlist-feature__card
  width 103px
  border-radius 5px
  height 150px
  position absolute
  bottom -10%
  left 50%
  background white
  overflow hidden
  transform translate(-50%, 0) translateZ(0)
  z-index 2
  box-shadow 0 5px 5px rgba($black, .4)
  backface-visibility hidden
  

  &.card-1
    transform translate(-120%, 5%) rotate(-10deg) translateZ(0)
    z-index 1
    
  &.card-2
    transform translate(20%, 4.5%) rotate(10deg) translateZ(0)
    z-index 3
  
  h4
    padding 3px
    font-size 14px
    opacity .5
    font-family $serif
    

.playlist-feature__card__image
  height 70px
  width 100%
  background-size cover
  background-position top center

.playlist-feature__title
  +above(md)
    font-size 25px
    line-height 34px
  
  