.article--edit
  position relative
  display block
  cursor pointer
  width 100%
  height 60px
  line-height 60px
  overflow hidden
  padding 0 1rem
  -webkit-tap-highlight-color: rgba(0,0,0,0)

.close-expander
  font-size 1.75rem
  z-index 3

.article--edit__content
  position static
  width 100%
  height 100%
  left 0
  transition-timing-function: cubic-bezier(0.7, 0, 0.3, 1)
  transition height 0.4s, top 0.4s
  .closed
    display flex
  .expanded
    display none
    flex 0