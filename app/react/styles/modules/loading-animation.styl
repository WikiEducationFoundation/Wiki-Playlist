.spinner 
  margin: 0 auto;
  text-align: center;

.spinner > div 
  width: 18px;
  height: 18px;
  background-color: $teal;
  border-radius: 100%;
  display: inline-block;
  margin: 0 3px;
  animation: sk-bouncedelay 1.7s infinite ease-in-out both;


.spinner .bounce1 
  animation-delay: -0.3s;


.spinner .bounce2 
  animation-delay: -0.125s;

.spinner .bounce3
  animation-delay: .1s;


@keyframes sk-bouncedelay 
  0%, 80%, 100%  
    transform: scale(0);
    transform: scale(0);
   
  40%  
    transform: scale(0.9);
    transform: scale(0.9);
  
